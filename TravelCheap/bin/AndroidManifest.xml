<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidbrew.travelcheap"
    android:versionCode="15"
    android:versionName="1.5" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name="com.droidbrew.travelcheap.TravelApp"
        android:allowBackup="true"
        android:icon="@drawable/buck_transp"
        android:label="@string/app_name" >
        <activity
            android:name="com.droidbrew.travelcheap.HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.droidbrew.travelcheap.HistoryActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_history" >
        </activity>
        
        <activity
            android:name="com.droidbrew.travelcheap.AdminActivity"
            android:screenOrientation="portrait" 
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.droidbrew.travelcheap.CurrencyActivity"
            android:screenOrientation="portrait" 
            android:label="@string/title_activity_currency" >
        </activity>
        <activity android:name="MyTripsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="HistoryTripsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="LanguageActivity"></activity>
    </application>

</manifest>
